<h1>sessions new</h1>

<%= form_tag("/login", method: "post") do %>

  <div>
    <%= label_tag(:name, "Name:")  %>
    <%= text_field_tag(:name)   %>
  </div>
  <div>
    <%= label_tag(:password, "password:")  %>
    <%= password_field_tag(:password)   %>
  </div>
  <div>
    <%= submit_tag("login")  %>
  </div>

<% end %>